@model BonVoyage.DAL.Entities.Review

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Song</h2>

<h3>Do you really want to delete this Review?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             @Html.Label("Text:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Rating:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("User:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Tour:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tour)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("Hotel:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReviewId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back</a>
    </form>
</div>

