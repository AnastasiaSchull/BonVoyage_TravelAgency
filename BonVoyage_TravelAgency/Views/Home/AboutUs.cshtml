@{
    ViewData["Title"] = "About Us";
}

<style>
    p {
        color: black;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Who We Are</h2>
            <p>
                Welcome to BonVoyage Travel Agency, where your travel dreams become a reality.
                We are a passionate team of travel enthusiasts dedicated to providing
                unforgettable experiences across the globe. Whether you're looking for a relaxing beach vacation,
                a thrilling adventure, or a cultural exploration, we've got you covered.
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Our Mission</h2>
            <p>
                At BonVoyage, our mission is to inspire people to explore the world by offering
                unique travel experiences and exceptional service. We believe in creating
                personalized journeys that reflect the individual preferences and desires of each traveler.
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h2>Why Choose Us</h2>
            <ul>
                <li>Personalized travel planning</li>
                <li>Expert knowledge of destinations worldwide</li>
                <li>24/7 customer support</li>
                <li>Exclusive deals and offers</li>
                <li>Commitment to sustainable tourism</li>
            </ul>
        </div>
    </div>
</div>
