@model BonVoyage.DAL.Entities.Review

@{
    ViewBag.Title = "Create";
}

<h2>Add a new Review</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label("Text:")
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Rating:")
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label("User:")
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.ListUsers as SelectList"></select>
            </div>

            <div class="form-group">
                @Html.Label("Tour:")
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.ListTours as SelectList"></select>
            </div>
            <div class="form-group">
                @Html.Label("Hotel:")
                <select asp-for="HotelId" class="form-control" asp-items="ViewBag.ListHotels as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
